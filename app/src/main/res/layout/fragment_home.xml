<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/app_content_bg_color"
    android:clipChildren="false"
    app:qmui_skin_background="?attr/app_skin_main_background">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/app_skin_home_top_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/TitleStyle"
                android:padding="10dp"
                android:text="速印" />

            <com.xing.weight.view.CusSearchText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/et_search_bg"
                android:drawableStart="@mipmap/icon_search"
                android:drawableEnd="@mipmap/icon_scan"
                android:drawablePadding="5dp"
                android:hint="车牌号、司机、收货人"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textSize="14sp"
                android:textColorHint="#CCFDFAFA"
                android:textColor="@color/qmui_config_color_white"/>

            <com.qmuiteam.qmui.alpha.QMUIAlphaImageButton
                android:id="@+id/ib_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:src="@mipmap/icon_menu" />

        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt_weight_print"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="磅单打印"
            android:textSize="25sp"
            app:qmui_backgroundColor="?attr/app_skin_btn_test_bg"
            app:qmui_borderColor="@color/app_color_blue"
            app:qmui_borderWidth="0px"
            app:qmui_radius="10dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt_outbound_print"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="出库单"
            android:textSize="25sp"
            app:qmui_backgroundColor="?attr/app_skin_btn_test_bg"
            app:qmui_borderColor="@color/app_color_blue"
            app:qmui_borderWidth="0px"
            app:qmui_radius="10dp" />

    </LinearLayout>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
