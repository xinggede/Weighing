<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_color_bj">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:fitsSystemWindows="true">

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/lin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qmui_config_color_white"
            android:orientation="vertical">

            <com.qmuiteam.qmui.layout.QMUILinearLayout style="@style/LinStyle">

                <TextView
                    style="@style/DescriptionStyle"
                    android:layout_marginStart="10dp"
                    android:text="货品编号" />

                <EditText
                    android:id="@+id/et_goods_code"
                    style="@style/ETStyle"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:digits="@string/number_or_words"
                    android:hint="@string/pls_input_goods_code"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="10dp" />

            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <com.qmuiteam.qmui.layout.QMUILinearLayout style="@style/LinStyle">

                <TextView
                    style="@style/DescriptionStyle"
                    android:layout_marginStart="10dp"
                    android:text="货品名称" />

                <EditText
                    android:id="@+id/et_goods_name"
                    style="@style/ETStyle"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:hint="@string/pls_input_goods_name"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:padding="10dp" />

            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <com.qmuiteam.qmui.layout.QMUILinearLayout style="@style/LinStyle">

                <TextView
                    style="@style/DescriptionStyle"
                    android:layout_marginStart="10dp"
                    android:text="型&#8195;&#8195;号" />

                <EditText
                    android:id="@+id/et_goods_model"
                    style="@style/ETStyle"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/pls_input_goods_model"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="6"
                    android:padding="10dp" />

            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <com.qmuiteam.qmui.layout.QMUILinearLayout style="@style/LinStyle">

                <TextView
                    style="@style/DescriptionStyle"
                    android:layout_marginStart="10dp"
                    android:text="规&#8195;&#8195;格" />

                <EditText
                    android:id="@+id/et_goods_specs"
                    style="@style/ETStyle"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:hint="@string/pls_input_goods_specs"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="6"
                    android:padding="10dp" />

            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <com.qmuiteam.qmui.layout.QMUILinearLayout style="@style/LinStyle">

                <TextView
                    style="@style/DescriptionStyle"
                    android:layout_marginStart="10dp"
                    android:text="单&#8195;&#8195;价" />

                <EditText
                    android:id="@+id/et_goods_price"
                    style="@style/ETStyle"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:hint="@string/pls_input_goods_price"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:padding="10dp" />

            </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <com.qmuiteam.qmui.layout.QMUILinearLayout style="@style/LinStyle">

                <TextView
                    style="@style/DescriptionStyle"
                    android:layout_marginStart="10dp"
                    android:text="描&#8195;&#8195;述" />

                <EditText
                    android:id="@+id/et_goods_describe"
                    style="@style/ETStyle"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@null"
                    android:hint="@string/pls_input_goods_describe"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:maxLength="50"
                    android:maxLines="3"
                    android:padding="10dp" />

            </com.qmuiteam.qmui.layout.QMUILinearLayout>


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/bt_save"
                style="@style/RoundButtonStyle"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:text="@string/save" />

        </com.qmuiteam.qmui.layout.QMUILinearLayout>
    </ScrollView>
</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
