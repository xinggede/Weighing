<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_color_bj">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true" />

    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:padding="10dp">

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bt_my_goods1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/bill_text4"
                    android:background="@drawable/image_bj"
                    android:src="@mipmap/icon_m_good" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="@string/bill_text4"/>

            </LinearLayout>




        </com.qmuiteam.qmui.layout.QMUILinearLayout>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="10dp">


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/bt_my_goods"
                style="@style/button_img_style"
                android:text="@string/bill_text4"
                android:drawableTop="@mipmap/icon_m_good" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/bt_my_user"
                style="@style/button_img_style"
                android:layout_marginStart="20dp"
                android:drawableTop="@mipmap/icon_m_custom"
                android:text="@string/bill_text5" />


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/bt_my_order"
                style="@style/button_img_style"
                android:drawableTop="@mipmap/icon_m_order"
                android:text="@string/bill_text3"
                />

        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/bt_bill_custom"
                style="@style/button_img_style"
                android:drawableTop="@mipmap/icon_m_pound_custom"
                android:text="@string/bill_text1" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/bt_outbound_custom"
                style="@style/button_img_style"
                android:layout_marginStart="20dp"
                android:text="@string/bill_text2"
                android:drawableTop="@mipmap/icon_m_outbound_custom" />


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/bt_more"
                style="@style/button_img_style"
                android:text="@string/bill_text6"
                android:drawableTop="@mipmap/icon_m_print_model" />

        </com.qmuiteam.qmui.layout.QMUILinearLayout>


    </com.qmuiteam.qmui.layout.QMUILinearLayout>

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>